
void solve() {
    int n, m;
    cin >> n >> m;
    vector<int> a(n + 1);
    for (int i = 1; i <= n; i++) {
        cin >> a[i];
    }
    vector<tuple<int, int, int>> b;
    double maxs = 0;
    for (int i = 0; i < m; i++) {
        int x, y, z;
        cin >> x >> y >> z;

        maxs = max(maxs, (double) (a[x] + a[y]) / (double) z);
    }
    cout << fixed << setprecision(20) << maxs << endl;
}
